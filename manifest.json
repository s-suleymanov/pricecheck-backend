{
  "manifest_version": 3,
  "name": "PriceCheck: Your All-in-One Shopping Assistant",
  "version": "0.8.4",
  "description": "PriceCheck instantly compares prices across stores to help you find the best deal.",
  "action": {},
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.target.com/*",
    "https://*.walmart.com/*",
    "https://*.bestbuy.com/*",
    "https://pricecheck-backend.onrender.com/*"
  ],
  "background": { "service_worker": "background.js" },
  "icons": {
    "16": "icons/logo.png",
    "32": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.html", "content.css", "icons/*"],
      "matches": [
        "https://*.amazon.com/*",
        "https://*.target.com/*",
        "https://*.walmart.com/*",
        "https://*.bestbuy.com/*"
      ]
    }
  ]
}
