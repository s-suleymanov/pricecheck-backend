{
  "manifest_version": 3,
  "name": "PriceCheck Comparison Tool",
  "version": "0.8.0",
  "icons": {
    "16": "icons/logo.png",
    "32": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "description": "Your all-in-one shopping assistant. PriceCheck instantly compares prices across multiple online stores, ensuring you always get the best deal.",
  "permissions": ["storage", "scripting", "activeTab"],
  "background": { "service_worker": "background.js" },
  "action": { "default_title": "PriceCheck" },
  "host_permissions": [
    "https://api.yourhost.com/*",
    "https://pricecheck-api.onrender.com/*",
    "http://localhost:4000/*"
  ],
  "web_accessible_resources": [{
    "resources": ["sidebar.html", "sidebar.css"],
    "matches": ["*://*.amazon.com/*", "*://*.amazon.co.uk/*", "*://*.amazon.de/*", "*://*.amazon.fr/*", "*://*.amazon.it/*", "*://*.amazon.es/*", "*://*.amazon.ca/*", "*://*.amazon.com.au/*", "*://*.amazon.co.jp/*", "*://*.amazon.com.mx/*", "*://*.amazon.in/*", "*://*.amazon.nl/*", "*://*.amazon.com.br/*", "*://*.amazon.com.tr/*", "*://*.amazon.ae/*", "*://*.amazon.sa/*", "*://*.amazon.sg/*"]
  }]
}
